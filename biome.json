{
    "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
    "organizeImports": {
        "enabled": true
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "suspicious": {
                "noExplicitAny": "off"
            },
            "style": {
                "noNonNullAssertion": "off"
            }
        },
        "ignore": ["dist", "node_modules"]
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4,
        "ignore": ["tsconfig.json"]
    },
    "json": {
        "parser": {
            "allowComments": true,
            "allowTrailingCommas": true
        }
    }
}
